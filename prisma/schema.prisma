

generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
}



enum IdeaStatus{
  ALIVE
  DEAD
  ON_HOLD
}

model User{
  id String @id @default(uuid())
  name String
  email String @unique
  password String

   createdAt DateTime @default(now())

   idea Idea[]
}

model Idea{
  id     String @id @default(uuid())
  title String
  description String

  status IdeaStatus @default(ALIVE)

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  closedAt    DateTime?

   userId String
  user   User @relation(fields: [userId], references: [id])
}